<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hellomind.dao.SchdDao">
	<insert id="insertSchd" parameterType="schdDto">
		INSERT INTO SCHD (SCHDDATE,CID,SCHDDATES,SCHDTIME) 
			VALUES(#{schdDate}, #{cId}, #{schdDates}, #{schdTime})
	</insert>
	<select id="selectSchd"  parameterType="String" resultType="schdDto">
			SELECT *, DATE_FORMAT(SCHDDATES,'%Y-%m-%d'), SCHDTIME  
			FROM SCHD 
				WHERE (SCHDDATES BETWEEN NOW() AND NOW()+INTERVAL 14 DAY) 
					AND CID =  #{cId}
				ORDER BY SCHDDATES
		<!-- SELECT DATE_FORMAT(SCHDDATE, '%Y-%m-%d %H:%i:%s') 
			FROM SCHD 	
				WHERE (SCHDDATE BETWEEN NOW() AND NOW()+INTERVAL 14 DAY) 
					AND CID = #{cId}
				ORDER BY SCHDDATE -->
	</select>
</mapper>